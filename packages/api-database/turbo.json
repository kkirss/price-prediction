{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "package.json", "tsconfig.json", "prisma/schema.prisma"]
    },
    "dev": {
      "dependsOn": ["dev-clean-build", "^dev-wait-build"],
      "inputs": ["src/**", "package.json", "tsconfig.json", "prisma/schema.prisma"],
      "outputs": [],
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^check-types", "lint-schema"]
    },
    "lint:fix": {
      "dependsOn": ["^check-types", "lint-schema"]
    },
    "lint-schema": {
      "inputs": ["prisma/schema.prisma"],
      "outputs": ["prisma/schema.prisma"]
    },
    "check-types": {
      "dependsOn": ["^check-types", "validate-schema"]
    },
    "validate-schema": {
      "inputs": ["prisma/schema.prisma"],
      "outputs": []
    },
    "migrate-db-dev": {
      "inputs": ["prisma/schema.prisma"],
      "outputs": ["prisma/migrations/**"]
    }
  }
}
