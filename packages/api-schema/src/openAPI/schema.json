{
  "openapi": "3.0.3",
  "info": {
    "title": "Price Prediction API",
    "version": "1.0",
    "description": "",
    "contact": {
      "name": "kkirss",
      "url": "https://github.com/kkirss"
    },
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/license/mit/"
    }
  },
  "externalDocs": {
    "url": "https://github.com/kkirss/price-prediction",
    "description": "Price Prediction API GitHub repository"
  },
  "servers": [
    {
      "description": "Local",
      "url": "http://localhost:4000"
    }
  ],
  "security": [
    {},
    {
      "BearerAuth": []
    }
  ],
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "description": "Example:\nAuthorization: Bearer <sessionId>",
        "scheme": "bearer"
      }
    },
    "schemas": {
      "MessageResponse": {
        "type": "object",
        "required": [
          "message"
        ],
        "properties": {
          "message": {
            "type": "string"
          }
        }
      },
      "ValidationErrorItem": {
        "type": "object",
        "required": [
          "message",
          "path"
        ],
        "properties": {
          "message": {
            "type": "string"
          },
          "path": {
            "type": "string"
          },
          "errorCode": {
            "type": "string"
          }
        }
      },
      "APIError": {
        "type": "object",
        "required": [
          "error"
        ],
        "properties": {
          "error": {
            "type": "string",
            "example": [
              "not found"
            ]
          },
          "errors": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ValidationErrorItem"
            }
          }
        }
      },
      "SignupRequest": {
        "type": "object",
        "required": [
          "username",
          "password"
        ],
        "properties": {
          "username": {
            "type": "string",
            "minLength": 1,
            "example": "user"
          },
          "password": {
            "type": "string",
            "minLength": 8,
            "example": "password"
          }
        }
      },
      "LoginRequest": {
        "type": "object",
        "required": [
          "username",
          "password"
        ],
        "properties": {
          "username": {
            "type": "string",
            "example": "user"
          },
          "password": {
            "type": "string",
            "example": "password"
          }
        }
      },
      "User": {
        "type": "object",
        "required": [
          "userId",
          "username"
        ],
        "properties": {
          "userId": {
            "type": "string"
          },
          "username": {
            "type": "string"
          }
        }
      },
      "Session": {
        "type": "object",
        "required": [
          "activePeriodExpiresAt",
          "idlePeriodExpiresAt",
          "sessionId",
          "user"
        ],
        "properties": {
          "activePeriodExpiresAt": {
            "type": "string",
            "format": "date-time"
          },
          "idlePeriodExpiresAt": {
            "type": "string",
            "format": "date-time"
          },
          "sessionId": {
            "type": "string"
          },
          "user": {
            "$ref": "#/components/schemas/User"
          }
        }
      },
      "Asset": {
        "description": "Financial asset",
        "type": "object",
        "required": [
          "id",
          "slug",
          "name",
          "lastPriceUsd",
          "lastPriceChange",
          "coincapId"
        ],
        "properties": {
          "id": {
            "type": "integer"
          },
          "slug": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "lastPriceUsd": {
            "type": "string"
          },
          "lastPriceChange": {
            "type": "string",
            "format": "date-time"
          },
          "coincapId": {
            "type": "string"
          }
        }
      },
      "PredictionType": {
        "type": "string",
        "enum": [
          "up",
          "down"
        ]
      },
      "CreatePricePredictionPayload": {
        "type": "object",
        "required": [
          "predictionType"
        ],
        "properties": {
          "predictionType": {
            "$ref": "#/components/schemas/PredictionType"
          }
        }
      },
      "PreviousPricePrediction": {
        "description": "Price prediction",
        "type": "object",
        "required": [
          "id",
          "assetSlug",
          "predictionType",
          "initialPriceUsd",
          "predictionTime",
          "finalPriceUsd",
          "predictionResolveTime",
          "scoreChange"
        ],
        "properties": {
          "id": {
            "type": "integer"
          },
          "assetSlug": {
            "type": "string"
          },
          "predictionType": {
            "$ref": "#/components/schemas/PredictionType"
          },
          "initialPriceUsd": {
            "type": "string"
          },
          "predictionTime": {
            "type": "string",
            "format": "date-time"
          },
          "finalPriceUsd": {
            "type": "string",
            "nullable": true
          },
          "predictionResolveTime": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "scoreChange": {
            "type": "integer",
            "nullable": true
          }
        }
      }
    },
    "requestBodies": {
      "SignupRequest": {
        "description": "Sign up request",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/SignupRequest"
            }
          }
        }
      },
      "LoginRequest": {
        "description": "Log in request",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/LoginRequest"
            }
          }
        }
      }
    },
    "parameters": {
      "assetSlug": {
        "name": "assetSlug",
        "in": "path",
        "required": true,
        "schema": {
          "type": "string"
        }
      }
    },
    "responses": {
      "MessageResponse": {
        "description": "Message",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/MessageResponse"
            }
          }
        }
      },
      "NotFoundResponse": {
        "description": "Not found",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/APIError"
            }
          }
        }
      },
      "BadRequestResponse": {
        "description": "Bad request",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/APIError"
            }
          }
        }
      },
      "UnauthorizedResponse": {
        "description": "Unauthorized",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/APIError"
            }
          }
        }
      },
      "InternalServerErrorResponse": {
        "description": "Internal server error",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/APIError"
            }
          }
        }
      },
      "HealthOKResponse": {
        "description": "Health OK",
        "content": {
          "text/plain": {
            "schema": {
              "type": "string",
              "example": "OK"
            }
          }
        }
      },
      "SignupSuccessfulResponse": {
        "description": "Sign up successful",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Session"
            }
          }
        }
      },
      "LoginSuccessfulResponse": {
        "description": "Log in successful",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Session"
            }
          }
        }
      },
      "AssetResponse": {
        "description": "Financial asset",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Asset"
            }
          }
        }
      },
      "LatestPricePredictionResponse": {
        "description": "Latest price prediction",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/PreviousPricePrediction"
            }
          }
        }
      }
    }
  },
  "paths": {
    "/": {
      "get": {
        "summary": "Root health check",
        "operationId": "checkHealthRoot",
        "responses": {
          "200": {
            "$ref": "#/components/responses/HealthOKResponse"
          },
          "400": {
            "$ref": "#/components/responses/BadRequestResponse"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerErrorResponse"
          }
        }
      }
    },
    "/health": {
      "get": {
        "summary": "Health check",
        "operationId": "checkHealth",
        "responses": {
          "200": {
            "$ref": "#/components/responses/HealthOKResponse"
          },
          "400": {
            "$ref": "#/components/responses/BadRequestResponse"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerErrorResponse"
          }
        }
      }
    },
    "/auth/signup": {
      "post": {
        "summary": "Sign up",
        "operationId": "signup",
        "requestBody": {
          "$ref": "#/components/requestBodies/SignupRequest"
        },
        "responses": {
          "201": {
            "$ref": "#/components/responses/SignupSuccessfulResponse"
          },
          "400": {
            "$ref": "#/components/responses/BadRequestResponse"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerErrorResponse"
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "summary": "Log in",
        "operationId": "login",
        "requestBody": {
          "$ref": "#/components/requestBodies/LoginRequest"
        },
        "responses": {
          "200": {
            "$ref": "#/components/responses/LoginSuccessfulResponse"
          },
          "400": {
            "$ref": "#/components/responses/BadRequestResponse"
          },
          "401": {
            "$ref": "#/components/responses/UnauthorizedResponse"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerErrorResponse"
          }
        }
      }
    },
    "/auth/logout": {
      "post": {
        "summary": "Log out",
        "operationId": "logout",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/components/responses/MessageResponse"
          },
          "400": {
            "$ref": "#/components/responses/BadRequestResponse"
          },
          "401": {
            "$ref": "#/components/responses/UnauthorizedResponse"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerErrorResponse"
          }
        }
      }
    },
    "/assets/{assetSlug}": {
      "get": {
        "summary": "Get asset",
        "operationId": "getAsset",
        "parameters": [
          {
            "$ref": "#/components/parameters/assetSlug"
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/components/responses/AssetResponse"
          },
          "400": {
            "$ref": "#/components/responses/BadRequestResponse"
          },
          "401": {
            "$ref": "#/components/responses/UnauthorizedResponse"
          },
          "404": {
            "$ref": "#/components/responses/NotFoundResponse"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerErrorResponse"
          }
        }
      }
    },
    "/assets/{assetSlug}/price-predictions/latest": {
      "get": {
        "summary": "Get latest price prediction for an asset",
        "operationId": "getLatestPricePrediction",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "parameters": [
          {
            "$ref": "#/components/parameters/assetSlug"
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/components/responses/LatestPricePredictionResponse"
          },
          "400": {
            "$ref": "#/components/responses/BadRequestResponse"
          },
          "401": {
            "$ref": "#/components/responses/UnauthorizedResponse"
          },
          "404": {
            "$ref": "#/components/responses/NotFoundResponse"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerErrorResponse"
          }
        }
      }
    }
  }
}
