{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": [
    "@price-prediction/tsconfig/base.json",
    "@price-prediction/tsconfig/solid-js.json",
    "@price-prediction/tsconfig/vite.json"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "index.html",
    "vite.config.ts"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist-types",
    "paths": {
      "~/*": [
        "src/*"
      ]
    },
    "emitDeclarationOnly": false,
    "noEmit": true
  },
  "references": [
    {
      "path": "../../packages/api-client"
    },
    {
      "path": "../../packages/api-schema"
    },
    {
      "path": "../../packages/auth-ui"
    },
    {
      "path": "../../packages/coincap-api"
    },
    {
      "path": "../../packages/financial-assets-ui"
    },
    {
      "path": "../../packages/tsconfig"
    },
    {
      "path": "../../packages/ui-theme"
    },
    {
      "path": "../../packages/vite-config"
    }
  ]
}
