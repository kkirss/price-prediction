{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": [
    "@price-prediction/tsconfig/base.json",
    "@price-prediction/tsconfig/solid-js.json",
    "@price-prediction/tsconfig/vite.json"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "package.json",
    "vite.config.ts",
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "src/*"
      ]
    },
    "emitDeclarationOnly": false,
    "noEmit": true
  },
  "references": [
    {
      "path": "../../packages/tsconfig"
    },
    {
      "path": "../../packages/ui-theme"
    }
  ]
}
