{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "pipeline": {
    "lint": {
      "inputs": ["**.tf", "**.tfvars", "package.json"],
      "outputs": ["**.tf"]
    },
    "lint:fix": {
      "inputs": ["**.tf", "**.tfvars", "package.json"],
      "outputs": ["**.tf"]
    },
    "infra-init": {
      "dependsOn": []
    },
    "infra-deploy": {
      "outputs": ["terraform.tfstate"],
      "cache": true
    }
  }
}
