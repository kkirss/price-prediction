{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "pipeline": {
    "build-docker": {
      "dependsOn": ["build"],
      "inputs": ["Dockerfile", "dist/**"]
    },
    "serve-docker": {
      "dependsOn": ["build-docker"],
      "cache": false,
      "persistent": true
    }
  }
}
