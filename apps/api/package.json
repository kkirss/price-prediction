{
  "name": "@price-prediction/api",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "files": [
    "dist",
    "prisma",
    "src"
  ],
  "main": "dist/server.mjs",
  "module": "dist/server.mjs",
  "types": "src/server.ts",
  "scripts": {
    "build": "vite build",
    "build-docker": "docker build ../.. --file Dockerfile --build-arg='APP_NAME=api' --build-arg='ENTRY_FILE_NAME=server.mjs' --tag price-prediction-api:latest",
    "dev": "vite",
    "lint": "ts-standard",
    "lint:fix": "ts-standard --fix",
    "check-types": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "serve": "cross-env PORT=4000 node dist/server.mjs",
    "serve-docker": "docker run -p 4000:4000 --env PORT=4000 --name price-prediction-api --rm price-prediction-api:latest",
    "lint-openapi-schema": "redocly lint src/openAPI/schema.json",
    "lint-db-schema": "prisma format",
    "generate-db-client": "prisma generate",
    "validate-db-schema": "prisma validate",
    "migrate-db-dev": "prisma migrate dev --skip-generate"
  },
  "dependencies": {
    "@prisma/client": "5.3.1",
    "express": "^4.18.2",
    "express-openapi-validator": "^5.0.6"
  },
  "devDependencies": {
    "@price-prediction/tsconfig": "workspace:*",
    "@price-prediction/vite-config": "workspace:*",
    "@redocly/cli": "^1.2.0",
    "@types/express": "^4.17.18",
    "@types/express-serve-static-core": "^4.17.37",
    "@types/node": "^20.7.2",
    "@types/supertest": "^2.0.13",
    "cross-env": "^7.0.3",
    "prisma": "^5.3.1",
    "supertest": "^6.3.3",
    "ts-standard": "^12.0.2",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "vite-plugin-node": "^3.0.2",
    "vite-tsconfig-paths": "^4.2.1",
    "vitest": "^0.34.4"
  },
  "optionalDependencies": {
    "fsevents": "^2.3.3"
  },
  "ts-standard": {
    "ignore": [
      "dist",
      "dist-types",
      "prisma"
    ]
  }
}
