{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "package.json", "tsconfig.json", "vite.config.ts"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "dependsOn": ["dev-clean-build", "^dev-wait-build"],
      "cache": false,
      "persistent": true
    },
    "dev-clean-build": {
      "dependsOn": [],
      "cache": false
    },
    "dev-wait-build": {
      "dependsOn": ["dev-clean-build", "^dev-wait-build"],
      "cache": false
    },
    "lint": {
      "inputs": ["src/**", "package.json", "tsconfig.json", "vite.config.ts"],
      "outputs": []
    },
    "lint:fix": {
      "inputs": ["src/**", "package.json", "tsconfig.json", "vite.config.ts"],
      "outputs": []
    },
    "check-types": {
      "inputs": ["src/**", "package.json", "tsconfig.json", "vite.config.ts"],
      "outputs": ["dist/**"]
    },
    "test": {
      "inputs": ["src/**", "package.json", "tsconfig.json", "vite.config.ts"],
      "outputs": []
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "serve": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    }
  }
}
