{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "package.json", "tsconfig.json", "vite.config.ts"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "dependsOn": ["dev-clean-build", "^dev-wait-build"],
      "cache": false,
      "persistent": true
    },
    "dev-clean-build": {
      "dependsOn": [],
      "cache": false
    },
    "dev-wait-build": {
      "dependsOn": ["dev-clean-build", "^dev-wait-build"],
      "cache": false
    },
    "lint": {
      "dependsOn": ["^check-types"],
      "inputs": ["src/**", "package.json", "tsconfig.json", "vite.config.ts"],
      "outputs": []
    },
    "lint:fix": {
      "dependsOn": ["^check-types"],
      "inputs": ["src/**", "package.json", "tsconfig.json", "vite.config.ts"],
      "outputs": []
    },
    "check-types": {
      "dependsOn": ["^check-types"],
      "inputs": ["src/**", "package.json", "tsconfig.json", "vite.config.ts"],
      "outputs": ["dist-types/**"]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "package.json", "tsconfig.json", "vite.config.ts"],
      "outputs": []
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "serve": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    },
    "infra-init": {
      "dependsOn": ["@price-prediction/infra-backend-bucket#infra-deploy"],
      "inputs": ["providers.tf"],
      "outputs": [".terraform/**"]
    },
    "infra-plan": {
      "dependsOn": ["infra-init"],
      "inputs": ["**.tf", "**.tfvars", "package.json"],
      "outputs": [],
      "cache": false
    },
    "infra-deploy": {
      "dependsOn": ["infra-init", "^infra-deploy"],
      "inputs": ["**.tf", "**.tfvars", "package.json"],
      "outputs": [],
      "cache": false
    },
    "infra-destroy": {
      "dependsOn": [],
      "inputs": ["**.tf", "**.tfvars", "package.json"],
      "outputs": [],
      "cache": false
    }
  }
}
